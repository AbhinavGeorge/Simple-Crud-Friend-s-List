<%- include('header') -%>
<div class="friends__form">
    <form action="/edit/<%= editId %>" method="POST">
    <div class="mb-3">
        <label for="exampleInputName" class="form-label">Name</label>
        <input type="text" class="form-control" id="exampleInputName" name="name" aria-describedby="nameHelp">
    </div>
    <div class="mb-3">
        <label for="exampleInputAge" class="form-label">Age</label>
        <input type="number" class="form-control" id="exampleInputAge" name="age" aria-describedby="ageHelp">
    </div>
    <label for="Username" class="form-label">Twitter Handle</label>
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">@</span>
        <input type="text" class="form-control" placeholder="Username" aria-label="Username" name="handle" aria-describedby="basic-addon1">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<%- include('footer') -%>